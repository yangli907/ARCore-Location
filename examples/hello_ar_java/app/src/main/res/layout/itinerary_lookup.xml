<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itinerary_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffffc"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#326e62"
        android:visibility="visible" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:paddingBottom="50dp">
    <ImageButton
        android:id="@+id/submit_lookup"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@drawable/circle_bg"
        android:src="@drawable/glasses"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#56aff5"
        android:scaleType="fitCenter"
        android:padding="10dp"/>
    </RelativeLayout>
    <TableLayout
        android:id="@+id/itinerary_info_new"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="80dp"
        android:paddingLeft="-20dp"
    />

